<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <% if (events.length === 0) { %>
        <p class="text-center text-gray-600">No events available.</p>
      <% } else { %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
          <% events.forEach(event => { %>
            <div class="bg-white shadow-md rounded-lg p-5">
              <h2 class="text-xl font-semibold"><%= event.title %></h2>
              <p class="text-gray-600"><b>Date:</b> <%= event.date %></p>
              <p class="text-gray-600"><b>Venue:</b> <%= event.venue %></p>
              <button class="bg-blue-600 text-white py-2 px-4 mt-3 rounded" onclick="getTickets('<%= event.link %>')">
                GET TICKETS
              </button>
            </div>
          <% }) %>
        </div>
      
        <script>
          function getTickets(url) {
            const email = prompt("Enter your email to get tickets:");
            if (email) {
              console.log("Email collected:", email);
              window.location.href = url;
            }
          }
        </script>
      <% } %>
      
</body>
</html>